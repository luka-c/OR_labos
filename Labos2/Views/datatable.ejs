<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Datatable</title>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css"/>
    <script type="text/javascript" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/public/styles/table.css">
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.0.1/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
</head>

<body>
    <table class="stripe display" id="parking" style="width: 100%;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ime Parkinga</th>
                <th>Broj mjesta</th>
                <th>Broj Invalidskih mjesta</th>
                <th>Vrsta</th>
                <th>Županija</th>
                <th>Grad</th>
                <th>Kvart</th>
                <th>Ulica</th>
                <th>Kućni broj</th>
                <th>Zona</th>
                <th>Dnevna karta (kn)</th>
                <th>Pozivni broj</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table> 
    <br>
    <br>
    <form>
        <fieldset>
            <div class="filter">
                <label for="search"> Stupac</label>
                <select name="search" id="search">
                    <option value="0">ID</option>
                    <option value="1">Ime Parkinga</option>
                    <option value="2">Broj mjesta</option>
                    <option value="3">Broj invalidskih mjesta</option>
                    <option value="4">Vrsta</option>
                    <option value="5">Županija</option>
                    <option value="6">Grad</option>
                    <option value="7">Kvart</option>
                    <option value="8">Ulica</option>
                    <option value="9">Kućni Broj</option>
                    <option value="10">Zona</option>
                    <option value="11">Dnevna Karta</option>
                    <option value="12">Pozivni broj</option>
                    <option value="13">Wildcard</option>
                </select>
            </div>
            <br>
            <div class="filter">
                <label for="filter">Filter</label>
                <input type="text" placeholder="Unesite vrijednost" id="filter" name="filter" required> </input>
            </div>
            <br>
            <div class="submit">
                <button id="traži">Pretraži</button> 
            </div>
        </fieldset>
    </form>
</body>

<script>
    var podatci = '<%-data%>';
    var lista = podatci.split(",");
    var ls = new Array();

    for(var j = 0; j < lista.length; j++){
        if (lista[j] == ""){
            lista[j] = "NULL";
        }
    }
    
    for(var i = 0; i < lista.length; i+=13) {
        var temp = [];
        temp.push(lista[1+i]);
        temp.push(lista[2+i]);
        temp.push(lista[3+i]);
        temp.push(lista[4+i]);
        temp.push(lista[5+i]);
        temp.push(lista[6+i]);
        temp.push(lista[7+i]);
        temp.push(lista[8+i]);
        temp.push(lista[9+i]);
        temp.push(lista[10+i]);
        temp.push(lista[0+i]);
        temp.push(lista[11+i]);
        temp.push(lista[12+i]);
        ls.push(temp);
    }

    $(document).ready(function() {
        var table = $("#parking").DataTable({
            dom: 'Bfrltip',
            paging: true,
            data: ls,
            lengthMenu: [5, 10, 15],
            processing: true,
            buttons: [
                'csv',
                {
                    text: 'JSON',
                    action: function ( e, dt, button, config ) {
                        var data = dt.buttons.exportData();
                        $.fn.dataTable.fileSave(
                            new Blob([JSON.stringify(data)]),
                            'Parking.json'
                        );
                    }
                }
            ]     
        });

        var defaultSearch = 0;
        var defaultFilter;

        $("#search").on('change',function(){
            defaultSearch = this.value;
        });

        $("#filter").on('change', function() {
            defaultFilter = this.value;
        });

        $("#traži").on('click', function(e) {
            e.preventDefault();
            if (defaultSearch == "13"){
                table.search(defaultFilter).draw();
            }
            else{
                table.columns(defaultSearch).search(defaultFilter).draw();
            }
        });
    });
</script>

</html>